
<h1>id: <%= @task.id %> のタスク編集ページ</h1>

<%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_area :status, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', task_path %>